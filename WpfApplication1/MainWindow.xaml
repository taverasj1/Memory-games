<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="WpfApplication1.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="Background1" HorizontalAlignment="Left" Height="301" Margin="10,9,0,0" VerticalAlignment="Top" Width="496" MouseDown="GridMousedDown">
        <Button x:Name="StartButton" FontSize="72" Content="  Start &#xA;Memory&#xA;  Game" Click="StartButton_Click" MouseDown="GridMousedDown" Margin="3,2,50,0" FontFamily="Buxton Sketch" TextOptions.TextHintingMode="Animated" FontWeight="SemiBold">
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FFEBEBEB" Offset="1"/>
                    <GradientStop Color="#FFDDDDDD" Offset="0.145"/>
                    <GradientStop Color="White" Offset="0.521"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
        <TextBlock x:Name="DTimer" TextAlignment="Center" FontSize="60"  Height="301" VerticalAlignment="Top" Background="Azure" MouseDown="GridMousedDown" Opacity="0.15" Margin="0,0,50,0" >
            <TextBlock.Effect>
                <DropShadowEffect Color="#FFFFF4F4"/>
            </TextBlock.Effect></TextBlock>
    </Grid>
</Window>
